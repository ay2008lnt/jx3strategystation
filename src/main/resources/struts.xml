<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.action.extension" value=","/>
    <constant name="struts.action.exclude" value=","/>
    <constant name="struts.configuration.xml.reload" value="true" />
    <constant name="struts.custom.i18n.resources" value="commons,message" />
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.action.excludePattern" value="/static/.*?"/>

    <package name="default" extends="struts-default" namespace="/">
        <default-action-ref name="index"/>
        <action name="index" class="top.yzlin.jx3strategystation.action.HomePage">
            <result name="success">/WEB-INF/content/homepage/index.jsp</result>
        </action>
        <action name="newArticle" class="top.yzlin.jx3strategystation.action.HomePage">
            <result name="success">/WEB-INF/content/homepage/article.jsp</result>
        </action>
    </package>

    <package name="article-commit" extends="default" namespace="/commit">
        <action name="common">
            <result name="success">/WEB-INF/content/article/article-commit-common.jsp</result>
        </action>
    </package>
</struts>